<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="full-content">
        <div class="row header-content">
            <div class="col-sm-2 header-logo-content">
                Logo
            </div>
            <div class="col-sm-10 header-title-content">
                @ViewBag.Header
            </div>
        </div>
        <div class="row" style="height: 100%">
            <div class="col-sm-2 navigation-content">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Budget</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Targets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Spending</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-linkd" href="#">Calendar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Reciepts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/StartApplication/Login">Log Out!</a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-10 panel-content">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
